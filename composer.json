{
    "name": "rafaelcx/bday-reminder",
    "description": "This is a simple tool designed to help remember birthdays by automatically adding them as recurring events in Google Calendar.",
    "authors": [
        {
            "name": "Rafael Garcia",
            "email": "rafaelgarcia95@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "slim/slim": "4.*",
        "guzzlehttp/psr7": "^2",
        "guzzlehttp/guzzle": "^7.0",
        "slim/twig-view": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Storage\\": "storage/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/",
            "Test\\Src\\": "test/src",
            "Test\\Storage\\": "test/storage",
            "Test\\Support\\": "test/support"
        }
    }
}
