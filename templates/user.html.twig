<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Birthday List</title>
    <link rel="stylesheet" href="/assets/user.css">
    <link rel="stylesheet" href="/assets/modal.css">
</head>
<body>
    <div class="container">
        <h1>Your Birthday List</h1>
        <p>These are the birthdays you've submitted. They will be periodically sent to you via your preferred messaging apps.</p>

        <div class="action-bar">
            <form action="/" method="get">
                <button type="submit">‚Üê Select Another User</button>
            </form>
            
            <button id="openModalBtn">+ Add New Birthday</button>
        
        </div>

        {% if birthdays is not empty %}
            <table class="birthday-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Date of Birth</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for birthday in birthdays %}
                        <tr>
                            <td>{{ birthday.name|e }}</td>
                            <td>{{ birthday.date|date('F j, Y') }}</td>
                            <td>
                                <button class="edit-btn" birthday-uid="{{ birthday.uid }}">Edit</button>

                                <form method="post" action="/birthday/delete">
                                    <input type="hidden" name="birthday_uid" value="{{ birthday.uid }}">
                                    <input type="hidden" name="user_uid" value="{{ user_uid }}">
                                    <button class="delete-btn" type="submit">X</button>
                                </form>

                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>You haven't added any birthdays yet.</p>
        {% endif %}

        <!-- Create Birthday - Modal Markup -->
        <div id="modal" class="modal hidden">
            <div class="modal-content">
                <span class="close" id="closeModalBtn">&times;</span>
                <h2>Add New Birthday</h2>
                <form method="post" action="/birthday">
                    <label>
                        Name:
                        <input type="text" name="name" required>
                    </label>
                    <label>
                        Date of Birth:
                        <input type="date" name="date" required>
                    </label>

                    <!-- Hidden -->
                    <input type="hidden" name="user_uid" value="{{ user_uid }}">

                    <button type="submit">Save</button>
                </form>
            </div>
        </div>

        <!-- Edit Birthday - Modal Markup -->
        <div id="editModal" class="modal hidden">
            <div class="modal-content">
                <span class="close" id="closeEditModalBtn">&times;</span>
                <h2>Edit Birthday</h2>
                <form method="post" action="/birthday/edit">
                    <label>
                        Name:
                        <input type="text" name="name" required>
                    </label>
                    <label>
                        Date of Birth:
                        <input type="date" name="date" required>
                    </label>

                    <!-- Hidden -->
                    <input type="hidden" name="birthday_uid" id="editBirthdayUid">
                    <input type="hidden" name="user_uid" value="{{ user_uid }}">

                    <button type="submit">Save</button>
                </form>
            </div>
        </div>

    </div>

    <!-- Create Modal JS -->
    <script>
        const openBtn = document.getElementById('openModalBtn');
        const modal = document.getElementById('modal');
        const closeBtn = document.getElementById('closeModalBtn');

        openBtn.addEventListener('click', () => modal.classList.remove('hidden'));
        closeBtn.addEventListener('click', () => modal.classList.add('hidden'));
        window.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.classList.add('hidden');
            }
        });
    </script>

    <!-- Edit Modal JS -->
    <script>
        document.querySelectorAll('.edit-btn').forEach(button => {
            button.addEventListener('click', () => {
                const birthday_uid = button.getAttribute('birthday-uid');
                document.getElementById('editBirthdayUid').value = birthday_uid;
                document.getElementById('editModal').classList.remove('hidden');
            });
        });

        document.getElementById('closeEditModalBtn').addEventListener('click', () => {
            document.getElementById('editModal').classList.add('hidden');
        });
    </script>

</body>
</html>
